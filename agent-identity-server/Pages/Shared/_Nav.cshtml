@{
	var name = !true.Equals(ViewData["signed-out"])
		? Context.User?.GetDisplayName()
		: null;
}

<div id="app-navbar" class="nav-page">
	<nav class="navbar navbar-expand-lg navbar-dark custom-bg-dark">

		<a href="~/" class="navbar-brand">
			<img src="~/duende-logo.svg" class="icon-banner" alt="logo">
			Agent Identity Server
		</a>

		@if (!string.IsNullOrWhiteSpace(name))
		{
			<ul class="navbar-nav ml-auto ">
				<li class="nav-item dropdown">
					<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
						@name <b class="caret"></b>
					</a>

					<form asp-page="/Account/Logout">
						<div class="dropdown-menu dropdown-menu-right form-group">
							<button class="dropdown-item btn btn-primary" asp-page="/Account/Logout/Index">
								Logout
							</button>
						</div>
					</form>
				</li>
			</ul>
		}

	</nav>
</div>
