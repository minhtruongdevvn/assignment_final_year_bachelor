@{
	var excludePages = new List<string> { "login" };
	var currentRoute = ViewContext?.RouteData?.Values?["page"];

	var isExclude = currentRoute != null
		? excludePages.Where(ep => currentRoute.ToString()!.ToLower().Contains(ep)).Any()
		: false;
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8"/>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no"/>

	<title>Agent Identity Server</title>

	<link rel="icon" type="image/x-icon" href="~/favicon.ico"/>
	<link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico"/>

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
	<link rel="stylesheet" href="~/lib/bootstrap4-glyphicons/css/bootstrap-glyphicons.min.css"/>
	<link rel="stylesheet" href="~/css/site.min.css"/>
</head>

<body>
@if (!isExclude)
{
	<partial name="_Nav"/>

	<div class="container body-container main">
		@RenderBody()
	</div>
}
else
{
	@RenderBody()
}

<script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/3ab419ffe7.js" crossorigin="anonymous"></script>

@await RenderSectionAsync("scripts", false)
</body>

</html>
